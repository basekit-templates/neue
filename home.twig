{% extends "layout.twig" %}

{% block content %}

{% include 'includes/header.twig' %}

<div class="container feature">
    <div class="grid">
        <div class="col-100">
            {{widget('responsiveslideshow', 'responsiveslideshow',
            {'duration':'5',
                'transSpeed': '1500',
                'transType': 'fade',
                'showButtons': true,
                'showBullets': false,
                'allowPause': false,
                'allowLoop': true,
                'showDescription': true,
                'showTitle': true,
                'images': [
                    {'url':asset('/images/feature-bg.jpg')}
                ]
                })|raw
            }}
        </div><!--end col-100-->
    </div><!--end grid-->
</div><!--end container-->

<div role="main">
    <div class="container">
        <div class="grid">
            <div class="col-100">
                {{zone('main')|raw}}
            </div><!--end 100-->
        </div><!--end grid-->
    </div><!--end container-->
</div><!--end main-->

{% include 'includes/footer.twig' %}


{% endblock %}