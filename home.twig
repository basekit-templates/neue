{% extends "layout.twig" %}

{% block content %}

<div class="ecom-nav">
    <div class="container">
        <div class="grid">
            <nav class="col-60 desktop-nav">
                {{widget('extendednavigation', 'desktopnav', {})|raw}}
            </nav><!--end col-60-->
            <div class="col-30">
                {{widget('ecombasket', 'ecombasket', {})|raw}}
            </div><!--end col-30-->
        </div><!--end grid-->
    </div><!--end container-->
</div><!--end ecom-nav-->

<div class="offset">

    <header class="bk-header">
        <div class="container">
            <div class="grid">
                <div class="col-60">
                    {{widget('companyname', 'companyname', {"business": "profile"})|raw}}
                </div><!--end col-30-->
                <div class="col-100 mobile-nav">
                    {{widget('extendednavigation', 'mobilenav', {})|raw}}
                </div><!--end col-30-->
            </div><!--end grid-->
        </div><!--end container-->
    </header>

    <div class="container feature">
        <div class="grid">
            <div class="col-100">
                {{widget('responsiveslideshow', 'slideshow', {'duration':'3', 'transSpeed': '1000', 'transType': 'fade', 'showButtons': true, 'showBullets': false, 'allowPause': true, 'allowLoop': true, 'images':[{'imageHeight':'500', 'imageWidth':'300', 'url':'http://placehold.it/350x300', 'title':'', 'description': ''},{'imageHeight':'500', 'imageWidth':'300', 'url':'http://placehold.it/350x300' }]})|raw}}
            </div><!--end col-100-->
        </div><!--end grid-->
    </div><!--end container-->

    <div role="main">
        <div class="container">
            <div class="grid">
                <div class="col-100">
                    {{widget('ecomproductslist', 'ecomproductslist', {})|raw}}
                </div><!--end 100-->
            </div><!--end grid-->
        </div><!--end container-->
    </div><!--end main-->

    {% include 'includes/footer.twig' %}

</div>

{% endblock %}