{% extends "layout.twig" %}

{% block content %}

<div class="ecom-nav">
    <div class="container">
        <div class="grid">
            <nav class="col-100">
                {{widget('extendednavigation', 'nav', {})|raw}}
            </nav><!--end col-100-->
        </div><!--end grid-->
    </div><!--end container-->
</div><!--end ecom-nav-->


<header class="bk-header">
    <div class="container">
        <div class="grid">
            <div class="divider">
                <div class="col-60">
                    {{widget('companyname', 'companyname', {"business": "profile"})|raw}}
                </div><!--end col-60-->
                <div class="col-30">
                    {{widget('ecombasket', 'ecombasket', {})|raw}}
                </div><!--end col-60-->
            </div><!--end divider-->
        </div><!--end grid-->
    </div><!--end container-->
</header>

<div class="container feature">
    <div class="grid">
        <div class="col-100">
            {{widget('responsiveslideshow', 'slideshow', {'duration':'3', 'transSpeed': '1000', 'transType': 'fade', 'showButtons': true, 'showBullets': false, 'allowPause': true, 'allowLoop': true, 'images':[{'imageHeight':'500', 'imageWidth':'300', 'url':'http://placehold.it/350x300', 'title':'', 'description': ''},{'imageHeight':'500', 'imageWidth':'300', 'url':'http://placehold.it/350x300' }]})|raw}}
        </div><!--end col-100-->
    </div><!--end grid-->
</div><!--end container-->

<div role="main">
    <div class="container">
        <div class="grid">
            <div class="col-100">
                {{widget('ecombasket', 'ecombasket', {})|raw}}
                {{widget('ecomcheckout', 'ecomcheckout', {})|raw}}
                {{widget('ecomproductslist', 'ecomproductslist', {})|raw}}
                {{widget('ecomproduct', 'ecomproduct', {})|raw}}
            </div><!--end 100-->
        </div><!--end grid-->
    </div><!--end container-->
</div><!--end main-->

{% include 'includes/footer.twig' %}


{% endblock %}